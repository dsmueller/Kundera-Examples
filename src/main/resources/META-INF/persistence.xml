	<!-- Persistence Units for User-Address example (Cross-datastore persistence) -->
	<persistence-unit name="rdbms">		
		<provider>com.impetus.kundera.KunderaPersistence</provider>
		
		<class>com.impetus.useraddress.entities.PersonnelUni1To1FK</class>
		<class>com.impetus.useraddress.entities.PersonnelUni1To1PK</class>
		<class>com.impetus.useraddress.entities.PersonnelUni1ToM</class>
		<class>com.impetus.useraddress.entities.PersonnelUniMTo1</class>
		<class>com.impetus.useraddress.entities.PersonnelUniMToM</class>
		<class>com.impetus.useraddress.entities.PersonnelBi1To1FK</class>
		<class>com.impetus.useraddress.entities.PersonnelBi1To1PK</class>
		<class>com.impetus.useraddress.entities.PersonnelBi1ToM</class>
		<class>com.impetus.useraddress.entities.PersonnelBiMTo1</class>
		<class>com.impetus.useraddress.entities.PersonnelBiMToM</class>
		
		<class>com.impetus.useraddress.entities.HabitatUni1To1FK</class>
		<class>com.impetus.useraddress.entities.HabitatUni1To1PK</class>
		<class>com.impetus.useraddress.entities.HabitatUni1ToM</class>
		<class>com.impetus.useraddress.entities.HabitatUniMTo1</class>
		<class>com.impetus.useraddress.entities.HabitatUniMToM</class>
		<class>com.impetus.useraddress.entities.HabitatBi1To1FK</class>
		<class>com.impetus.useraddress.entities.HabitatBi1To1PK</class>
		<class>com.impetus.useraddress.entities.HabitatBi1ToM</class>
		<class>com.impetus.useraddress.entities.HabitatBiMTo1</class>
		<class>com.impetus.useraddress.entities.HabitatBiMToM</class>
		
		<properties>
			<property name="kundera.client" value="rdbms" />
  			<!--<property name="hibernate.hbm2ddl.auto" value="create" />-->
  			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/hibernatepoc" />
			<property name="hibernate.connection.username" value="root" />
			<property name="hibernate.connection.password" value="impetus" />
			<property name="hibernate.current_session_context_class"
				value="org.hibernate.context.ThreadLocalSessionContext" />
		</properties>
	</persistence-unit>
